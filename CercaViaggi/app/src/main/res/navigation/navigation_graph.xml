<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.cercaviaggi19.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_filtriFragment"
            app:destination="@id/filtriFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_registrati"
        android:name="com.example.cercaviaggi19.ui.registrazione.RegistrazioneFragment"
        android:label="Registrazione"
        tools:layout="@layout/fragment_registrazione" />
    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.cercaviaggi19.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/filtriFragment"
        android:name="com.example.cercaviaggi19.FiltriFragment"
        android:label="Ricerca per filtri"
        tools:layout="@layout/fragment_filtri" />
</navigation>